<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.integrator.mapper.InDatasourceMapper">
    
    <resultMap type="InDatasource" id="InDatasourceResult">
        <result property="datasourceId"    column="datasource_id"    />
        <result property="datasourceName"    column="datasource_name"    />
        <result property="datasourceType"    column="datasource_type"    />
        <result property="datasourceOptions"    column="datasource_options"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectInDatasourceVo">
        select datasource_id, datasource_name, datasource_type, datasource_options, status, remark, create_by, create_time, update_by, update_time from in_datasource
    </sql>

    <select id="selectInDatasourceList" parameterType="InDatasource" resultMap="InDatasourceResult">
        <include refid="selectInDatasourceVo"/>
        <where>  
            <if test="datasourceName != null  and datasourceName != ''"> and datasource_name like concat('%', #{datasourceName}, '%')</if>
            <if test="datasourceType != null  and datasourceType != ''"> and datasource_type = #{datasourceType}</if>
            <if test="datasourceOptions != null  and datasourceOptions != ''"> and datasource_options like concat('%', #{datasourceOptions}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="remark != null  and remark != ''"> and remark like concat('%', #{remark}, '%')</if>
        </where>
    </select>
    
    <select id="selectInDatasourceById" parameterType="String" resultMap="InDatasourceResult">
        <include refid="selectInDatasourceVo"/>
        where datasource_id = #{datasourceId}
    </select>
        
    <insert id="insertInDatasource" parameterType="InDatasource">
        insert into in_datasource
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="datasourceId != null">datasource_id,</if>
            <if test="datasourceName != null and datasourceName != ''">datasource_name,</if>
            <if test="datasourceType != null and datasourceType != ''">datasource_type,</if>
            <if test="datasourceOptions != null and datasourceOptions != ''">datasource_options,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="datasourceId != null">#{datasourceId},</if>
            <if test="datasourceName != null and datasourceName != ''">#{datasourceName},</if>
            <if test="datasourceType != null and datasourceType != ''">#{datasourceType},</if>
            <if test="datasourceOptions != null and datasourceOptions != ''">#{datasourceOptions},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateInDatasource" parameterType="InDatasource">
        update in_datasource
        <trim prefix="SET" suffixOverrides=",">
            <if test="datasourceName != null and datasourceName != ''">datasource_name = #{datasourceName},</if>
            <if test="datasourceType != null and datasourceType != ''">datasource_type = #{datasourceType},</if>
            <if test="datasourceOptions != null and datasourceOptions != ''">datasource_options = #{datasourceOptions},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where datasource_id = #{datasourceId}
    </update>

    <delete id="deleteInDatasourceById" parameterType="String">
        delete from in_datasource where datasource_id = #{datasourceId}
    </delete>

    <delete id="deleteInDatasourceByIds" parameterType="String">
        delete from in_datasource where datasource_id in 
        <foreach item="datasourceId" collection="array" open="(" separator="," close=")">
            #{datasourceId}
        </foreach>
    </delete>
    
</mapper>