<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.demo.mapper.DemoAccountMapper">
    
    <resultMap type="DemoAccount" id="DemoAccountResult">
        <result property="id"    column="id"    />
        <result property="userCode"    column="user_code"    />
        <result property="money"    column="money"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectDemoAccountVo">
        select id, user_code, money, status, remark, create_by, create_time, update_by, update_time from demo_account
    </sql>

    <select id="selectDemoAccountList" parameterType="DemoAccount" resultMap="DemoAccountResult">
        <include refid="selectDemoAccountVo"/>
        <where>
            <if test="userCode != null  and userCode != ''"> and user_code like concat('%', #{userCode}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectDemoAccountById" parameterType="Long" resultMap="DemoAccountResult">
        <include refid="selectDemoAccountVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDemoAccount" parameterType="DemoAccount" useGeneratedKeys="true" keyProperty="id">
        insert into demo_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userCode != null">user_code,</if>
            <if test="money != null">money,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userCode != null">#{userCode},</if>
            <if test="money != null">#{money},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateDemoAccount" parameterType="DemoAccount">
        update demo_account
        <trim prefix="SET" suffixOverrides=",">
            <if test="userCode != null">user_code = #{userCode},</if>
            <if test="money != null">money = #{money},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDemoAccountById" parameterType="Long">
        delete from demo_account where id = #{id}
    </delete>

    <delete id="deleteDemoAccountByIds" parameterType="String">
        delete from demo_account where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>